<% if @user.errors.any? %>
  <p class="ALERT-danger">The form has <%= pluralize(@user.errors.count, "error") %></p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>
<%= form_for @user do |f| %>
  <%= f.label :name, 'Username' %>
  <%= f.text_field :name %>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %>
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<%end%>
